// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
  SUB_ADMIN
}

enum AccountStatus {
  ACTIVE
  SUSPENDED
}

enum SubscriptionPlan {
  FREE
  MONTHLY
  SIX_MONTH
  YEARLY
}

model User {
  id               String        @id @default(uuid())
  username         String        @unique
  email            String        @unique
  passwordHash     String
  role             Role          @default(STUDENT)
  accountStatus    AccountStatus @default(ACTIVE)
  xp               Int           @default(0)
  level            Int           @default(1)
  streak           Int           @default(0)
  maxStreak        Int           @default(0)
  subscriptionStatus SubscriptionPlan @default(FREE)
  
  // Relations
  profile          Profile?
  preferences      Preferences?
  adminLogs        AdminLog[]
  announcements    Announcement[] @relation("CreatedAnnouncements")
  resources        Resource[]     @relation("CreatedResources")
  upgradeRequests  UpgradeRequest[]
  
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@map("users")
}

model Profile {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  totalInterviews Int      @default(0)
  totalCodeLines  Int      @default(0)
  averageScore    Float    @default(0)
  
  achievements    Json?    // Array of achievement objects
  dailyMissions   Json?    // Array of mission objects
  weeklyGoal      Json?    // Weekly goal settings
  
  @@map("user_profiles")
}

model Preferences {
  id                  String   @id @default(uuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  defaultVoice        String   @default("Female (Alloy)")
  defaultDifficulty   String   @default("Intermediate")
  defaultQuestionCount Int     @default(10)
  language            String   @default("English")
  theme               String   @default("dark")
  accentColor         String   @default("#10b981")
  
  emailNotifications  Boolean  @default(true)
  reminderNotifications Boolean @default(true)
  updateNotifications Boolean  @default(true)
  
  @@map("user_preferences")
}

model AdminLog {
  id         String   @id @default(uuid())
  adminId    String
  adminName  String
  admin      User     @relation(fields: [adminId], references: [id])
  
  action     String
  targetId   String?
  targetName String?
  details    Json?
  ipAddress  String?
  
  createdAt  DateTime @default(now())

  @@map("admin_logs")
}

model Announcement {
  id         String   @id @default(uuid())
  title      String
  content    String
  priority   String   @default("medium") // low, medium, high, urgent
  audience   String   @default("all")    // all, students, pro
  
  createdBy  String
  creator    User     @relation("CreatedAnnouncements", fields: [createdBy], references: [id])
  
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("announcements")
}

model Resource {
  id          String   @id @default(uuid())
  title       String
  description String?
  url         String
  type        String   // pdf, video, link, doc
  category    String
  isProOnly   Boolean  @default(false)
  
  createdBy   String
  creator     User     @relation("CreatedResources", fields: [createdBy], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("resources")
}

model UpgradeRequest {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  requestedPlan String
  status        String   @default("pending") // pending, approved, rejected
  adminNote     String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("upgrade_requests")
}
